include modules/head/head
include modules/header/header
include modules/footer/footer
include modules/elements/elements

doctype html
html
  +head(head.home)
  body
    +header
    .header-info.has-bg
      .wrapper
        .inner.d-flex.justify-content-end.flex-column.text-center.flex-end
          h3 Chào mừng Huy,
          p Để bắt đầu với Finhay, hãy kiểm tra email và kích hoạt tài khoản.
    .main-content
      .wrapper.d-flex.justify-content-between
        .left
          .card-finhay.mxw-478
            form.form-login
              .title
                h4 Bắt đầu sử dụng Finhay
                p Tiết kiệm và đầu tư bắt đầu chỉ từ 50.000đ. Finhay cũng là nơi giúp bạn tích luỹ kiến thức tài chính cá nhân để đạt được mục tiêu dài hạn.
              .form-group
                label Email của bạn
                input.form-control-finhay(type="email", placeholder="nhập email của bạn")
                button(type="submit", disabled).mw-194.btn.green.btn-lg-finhay TIẾP THEO
                  img.arrow(src="images/icon-arrow.png", alt="icon")
              footer 
                a(href="#").d-block.mw-194.text-center Bạn gặp rắc rối?
        .right
          .card-finhay.sm.mxw-300
            .title
              h4 Bảo mật tài khoản
            .content
              .progress-wrapper.d-flex.justify-content-between.align-items-center
                .progress.w-100
                  .progress-bar.bg-success(
                    role='progressbar', 
                    style='width: 42.857%', 
                    aria-valuenow='3', 
                    aria-valuemin='0', 
                    aria-valuemax='7')
                .label
                  p 3/7
              button.control
                img(src="images/icon-edit.png", alt="icon")
                span Cập nhật thêm
          .card-finhay.sm.mxw-300
            .title
              h4 Tổng quan
            .detail-list-wrapper
              dl.row.detail-list
                dt.col-sm-6 Đã đầu tư:
                dd.col-sm-6.text-right 3.500.000 
                  span.currency đ
                dt.col-sm-6 Đã rút:
                dd.col-sm-6.text-right 3.500.000 
                  span.currency đ
                dt.col-sm-6 Kết quả hoạt động:
                dd.col-sm-6.text-right +56.951 
                  span.currency đ
                  | / +1,41%

    +footer
  script(type='text/javascript', src='js/main.js')
